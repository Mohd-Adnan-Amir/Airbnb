<% layout("/layouts/boilerplate.ejs") %>

  <div class="d-flex justify-content-center mt-4">
    <div class="col-8">

      <h3>
        <%= listing.title %>
      </h3>

      <div class="card show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text"><i>Owned by <%= listing.owner.username %></i></p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"><%= listing.country %></p>
           
        </div>
      </div>
      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="mt-3 d-flex gap-3">

        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
      <% } %>

      <% if(currUser) { %>
      <div class="col-14 mb-3">
        <hr>
        <h5>Leave a review</h5>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" class="form-range " id="rating" name="reviews[rating]">
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="reviews[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add a comment</div>
          </div>
          <button class="btn btn-outline-success">Submit</button>
        </form>
      </div>
      <% } %>
      <hr>
       <!-- reviews -->
        <div class="container  my-4">
      
        <h5><strong>All Reviews</strong></h5>

        <!-- <div class="row row-cols-1 ms-3 row-cols-sm-2 row-cols-md-2 g-3"> -->
        <div class="row row-cols-1 mx-1 row-cols-sm-2 row-cols-md-2 g-3">

          <% for(let review of listing.reviews) { %>
            <div class="col">
              <div class="card h-100 shadow-sm card-review p-3">
                <div class="card-body">
                  <h5 class="card-title"><%= review.author.username %></h5>
                  <p class="card-text">
                    <%= review.comment %>
                  </p>
                  <p class="card-text"><strong>
                      <%= review.rating %> stars
                    </strong></p>
                </div>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
              </div>
              
            </div>
            <% } %>
        </div>
      </div>





</div>
</div>








     


